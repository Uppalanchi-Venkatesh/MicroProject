<!DOCTYPE html>
<html>
    <head>
        <%- include('./partials/header.ejs') %>
        <link rel="stylesheet" type="text/css" href="../CSS/seat.css"/>
    </head>
    <body style="background-color: #D5D6D8;">
        <%- include('./page-partials/navbar.ejs') %>
        <div class="container-fluid">
            <div class="row">
                <div class="col col-xs-12 col-lg-12 col-sm-12 col-md-12 text-center">
                    <h1 class="room">READING ROOM SEAT RESERVATION</h1>
                    <div class="row">
                        <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 center-block">
                            <div class='row text-center center-block'>
                                <input type="text" class="form-control input" id="Name" placeholder="Enter Name" >
                                <input type="number" min='0' max='50' class="form-control input" id="Seats" placeholder="Enter number of seats">
                            </div>
                            <div class='row' style="margin-bottom : 20px">
                                <button type="button" id="Selectseat" class="btn btn-success seatsBtn center-block">Select Seats</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-offset-2 col-md-offset-4 col-lg-offset-4 col-sm-8 col-xs-12 col-md-4 col-lg-4 col-sm-offset-2 col-md-offset-4 col-lg-offset-4 center-block">
                            <table id="seatTable" class="table fixed-column td">
                                <thead>
                                    <tr>
                                        <th> </th>
                                        <th>1</th>
                                        <th>2</th>
                                        <th>3</th>
                                        <th>4</th>
                                        <th>5</th>
                                        <th>6</th>
                                        <th>7</th>
                                        <th>8</th>
                                        <th>9</th>
                                        <th>10</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>A</td>
                                    </tr>
                                    <tr>
                                        <td>B</td>
                                    </tr>
                                    <tr>
                                        <td>C</td>
                                    </tr>
                                    <tr>
                                        <td>D</td>
                                    </tr>
                                    <tr>
                                        <td>E</td>
                                    </tr>
                                    <tr>
                                        <td>F</td>
                                    </tr>
                                    <tr>
                                        <td>G</td>
                                    </tr>
                                    <tr>
                                        <td>H</td>
                                    </tr>
                                    <tr>
                                        <td>I</td>
                                    </tr>
                                    <tr>
                                        <td>J</td>
                                    </tr>
                                </tbody>
                            </table>
                            <button type="button" id="ConfirmSeat" class="btn btn-warning seatsBtn">Confirm Seats</button>
                            <div>
                                <span class="spanBox" style='Background-color:green'></span><label>Selected Seats</label>
                                <span class="spanBox" style='Background-color:red'></span><label>Reserved Seats</label>
                                <span class="spanBox"></span><label>Empty Seats</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class='row'>
                <div class='col-xs-12 col-sm-2 col-md-2 col-lg-2'></div>
                <div class='col-xs-12 col-sm-8 col-md-8 col-lg-8'>
                    <table class='table-striped table table-bordered resultTable'>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>No.of Seats</th>
                                <th>Seats Reserved</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
                <div class='col-xs-12 col-sm-4 col-md-4 col-lg-4'></div>
            </div>
        </div>
        <%- include('./partials/footer.ejs') %>
        <script type="text/javascript" src="../JavaScript/seat.js"></script>
    </body>
</html>