<!DOCTYPE html>
<html>
    <head>
        <%- include('./partials/header.ejs') %>
        <link rel="stylesheet" href="../CSS/login.css"> 
    </head> 
    <body class="bg-secondary">
        <%- include('./page-partials/navbar.ejs') %>
        <div class="container">
        <div class="row" style="margin-top: 100px;">
            <div class="col-sm-offset-3 col-md-offset-3 col-lg-offset-3 col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
                <form class="text-center border border-light p-5" action="/register" method="POST">
                    <p class="h4 mb-4">Sign up</p>
                    <input type="email" id="defaultLoginFormEmail" required name="email" class="form-control mb-4" placeholder="E-mail">
                    <input type="password" id="defaultLoginFormPassword" required name="password" class="form-control mb-4" placeholder="Password"><br>
                    <button class="btn btn-info btn-block my-4" type="submit">Register</button>
                </form>
            </div>
        </div>
        </div>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>