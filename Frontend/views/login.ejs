<!DOCTYPE html>
<html>
    <head>
        <%- include('./partials/header.ejs') %>
        <link rel="stylesheet" href="../CSS/login.css"> 
    </head> 
    <body class="bg-secondary">
        <%- include('./page-partials/navbar.ejs') %>
        <div class="container">
        <div class="row" style="margin-top: 50px;">
            <div class="col-sm-offset-2 col-md-offset-3 col-lg-offset-3 col-sm-8 col-xs-12 col-md-6 col-lg-6 col-sm-offset-2 col-md-offset-3 col-lg-offset-3">
                <form class="text-center border border-light p-5" action="/auth/login" method="POST">   
                    <p class="h4 mb-4" style="color: black;">Sign in</p>
                    <% if (messages.length>0) { %>
                        <h3><%= messages %></h3> 
                    <% } %>
                    <input type="email" id="defaultLoginFormEmail" required name="email" class="form-control mb-4" placeholder="E-mail">
                    <input type="password" id="defaultLoginFormPassword" required name="password" class="form-control mb-4" placeholder="Password">
                    <div class="d-flex justify-content-around">
                        <div>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                                <label class="custom-control-label" for="defaultLoginFormRemember" style="color: black;">Remember me</label>
                            </div>
                        </div>
                        <div>
                            <p><a href="" style="color: red;">Forgot password?</a></p>
                        </div>
                    </div>
                    <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>
                    <p style="color: black;"><b> Not a member?</b><a href="/register" style="color: red;">Register</a></p>
                    <div class="col" style="margin-left : -15px;">
                        <a href="/auth/google" class="google btn" style="border: solid;color: black;">
                          <i class="fa fa-google fa-fw"></i> Login with Google+
                        </a>
                        <a href="/auth/facebook" class="fb btn" style="border: solid;color: black;">
                          <i class="fa fa-facebook fa-fw"></i> Login with Facebook
                        </a>
                    </div>
                </form>
            </div>
        </div>
        </div>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>