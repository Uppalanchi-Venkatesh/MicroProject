<!DOCTYPE html>
<html>
    <head>
        <%- include('./partials/header.ejs') %>
        <link rel="stylesheet" href="../CSS/login.css"> 
    </head> 
    <body class="bg-secondary">
        <%- include('./page-partials/navbar.ejs') %>
        <div class="container">
        <div class="row" style="margin-top: 100px;">
            <div class="col-sm-offset-3 col-md-offset-3 col-lg-offset-3 col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
                <form class="text-center border border-light p-5" action="/login" method="POST">   
                    <p class="h4 mb-4">Sign in</p>
                    <% if (messages.length>0) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="background-color: red !important;">
                                <%= messages %>
                                <span aria-hidden="true">&times;</span>
                            </button> 
                        </div>
                    <% } %>
                    <input type="email" id="defaultLoginFormEmail" required name="email" class="form-control mb-4" placeholder="E-mail">
                    <input type="password" id="defaultLoginFormPassword" required name="password" class="form-control mb-4" placeholder="Password">
                    <div class="d-flex justify-content-around">
                        <div>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                                <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
                            </div>
                        </div>
                        <div>
                            <p><a href="" style="color: red;">Forgot password?</a></p>
                        </div>
                    </div>
                    <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>
                    <p><b> Not a member?</b><a href="/register" style="color: red;">   Register</a></p>
                </form>
               
            </div>
        </div>
        </div>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>